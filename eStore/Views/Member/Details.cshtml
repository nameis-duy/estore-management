@model DataAccess.Member

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>
<div>
    
    @{
        if ("Admin".Equals(TempData["Role"] as string))
        {
            <a asp-action="Edit" asp-route-id="@Model?.MemberId">Edit</a> <span>|</span>
            <a asp-action="Index">Back to List</a>
        }
        if ("User".Equals(TempData["Role"] as string))
        {
            <a asp-action="Create" asp-controller="Order" asp-route-id="@Model?.MemberId">Create an order</a> <span>|</span>
            <a asp-action="Index" asp-controller="Order" asp-route-id="@Model?.MemberId">View Order History</a>
        }
    }
</div>

@{
    TempData.Keep("Role");
}
